<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.brainteaser"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.brainteaser.Menu"
            android:label="@string/app_name" >
                <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
        </activity>
        <activity
            android:name="com.example.brainteaser.Find_The_Pairs"
            android:label="@string/app_name" >
             <intent-filter>
                <action android:name="com.example.brainteaser.RULES" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            
              
            
        </activity>
        <activity
            android:name="com.example.brainteaser.TicTacToe"
            android:label="@string/app_name" >
              <intent-filter>
                <action android:name="com.example.brainteaser.STARTLIST" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.example.brainteaser.MainActivity"
            android:label="@string/app_name" >
            
             <intent-filter>
                <action android:name="com.example.brainteaser.MAINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
           
        
        </activity>
         <activity
            android:name="com.example.brainteaser.Myclass"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Dialog">
             <intent-filter>
                <action android:name="com.thenewboston.travis.MYCLASS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
             
            
        </activity>
         <activity
            android:name="com.example.brainteaser.Start"
            android:label="@string/app_name" >
               <intent-filter>
                <action android:name="com.example.brainteaser.START" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.brainteaser.StartMulti"
            android:label="@string/app_name" >
                 <intent-filter>
                <action android:name="com.example.brainteaser.STARTMULTI" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <!-- android:configChanges="keyboardHidden|orientation|screenSize" -->

        <activity
            android:name="com.example.brainteaser.Main"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
                <intent-filter>
                <action android:name="com.example.brainteaser.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.brainteaser.MainMulti"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
                  <intent-filter>
                <action android:name="com.example.brainteaser.MAINMULTI" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.brainteaser.Result"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Dialog" >
                    <intent-filter>
                <action android:name="com.example.brainteaser.RESULT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
        